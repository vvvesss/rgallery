<div class="page_title"><h1>RGallery Dirlist</h1></div>

<div>
  <%= form_tag do |f| %>
    <div class="files">
      <table class="main">
        <th colspan="3" class="main">Current Image Files in images/tmp</th>
           <tr class="main">
               <td class="main">
                   Add
               </td>
               <td class="main">
                   Filename
               </td>
               <td class="main">
                   GThumb
               </td>
           </tr>
        <% ii = 0 %>
        <% @imglist.each do |file| %>
           <% ii += 1 %>
           <% ii%2 == 0 ? style = "class='odd'" : style = ' ' %>
           <tr <%= style %>>
               <td>
                 <input type=checkbox name=files[] value='<%= file %>' checked="checked">
               </td>
               <td>
                 <%= file %>
               </td>
               <td class="right">
                 <input type=checkbox name=thumb_files[] value='<%= file %>'>
               </td>
           </tr>
        <% end %>
          <tr>
            <td></td>
            <td>
              Gallery:
              <select id="gal" name="gal">
                  <option value""></option>
                <% @galleries.each do |gallery| %>
                  <option value="<%= gallery.id %>" ><%= gallery.title %></option>
                <% end %>
              </select>
              <%= submit_tag "Add to Gallery" %> <input type=checkbox name=del value='del'> Delete Files from tmp
            </td>
            <td>

            </td>
          </tr>
      </table>
    </div>
  <% end %>  
 <div class="notice">
   <% if params[:files] %>
     <% params[:files].each do |file| %>
       <%= file %>
     <% end %>
   <% end %>
   <% if params[:gal] %>
     <%= params[:gal]%>
   <% end %>
   <% if notice %>
     <p id="notice"><%= notice %></p> 
   <% end %>
 </div>
</div>


