<%= form_for(@image) do |f| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul>
      <% @image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <% img = "../../#{@image.path}/image_thumb/#{@image.fname}"%>
  <div class="field">
    <img src="<%= img %>" alt="<%= @image.fname %>" width="200" />
  </div>
  <div class="field">
    <%= f.label :fname %><br />
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :gallery %><br />
    <select id="image_gallery_id" name="image[gallery_id]">
      <% Gallery.all.each do |gallery| %>
        <% selected = 'selected="selected"' if @image.gallery_id == gallery.id %>
        <option value="<%= gallery.id %>" <%= selected %> ><%= gallery.title %></option>
      <% end %>
    </select>
  </div>
  <div class="field">
    <%= f.label :seentimes %><br />
    <%= f.number_field :seentimes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
