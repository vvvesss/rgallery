<!-- Site Home Page -->

<%# @cat_thumbs.each do |key1, value| %>
  <%# value.each do |key2, value2| %>
    <%#= key1 %> <%#= key2 %> <%#= value2 %>
  <%# end %>
<%# end %>
<%= @table_rows %>
<div class="main-site">
  <div class="panel">
    <div id="site_title"><img src="../aulele_gallery.png"></div>
    <div id="home"><a href="<%= site_path %>"><img src="../home.png"></a></div>
    <div id="feedback"><a href="<%= site_path %>"><img src="../feedback.png"></a></div>
  </div>
    <table id="cat_tab">
      <% 1.upto(@row_number) do |row| %>
        <tr>
        <% 1.upto(3) do |col| %>
          <td class="cat_tab">
            <% if @cat_thumbs[col][row] != {} 
              /(.*\.(jpg|png)):(\d+)/i.match(@cat_thumbs[col][row])
              imgfile = $1
              catid = $3
            %>
              <a href="/cshow/<%= catid %>"><img src="<%= imgfile %>" alt="category"/></a>
            <% end %>
          </td>
        <% end %>
        </tr>
      <% end %>
    </table>
</div>